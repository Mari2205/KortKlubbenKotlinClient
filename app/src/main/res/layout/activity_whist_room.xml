    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhistRoomActivity">


    <ImageView
        android:id="@+id/imageView_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="270"
        android:src="@drawable/card_table" />


    <LinearLayout
        android:id="@+id/ll_cardPlayed"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/ll_cards"
        android:layout_width="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_card1"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_ace_of_diamonds"/>

        <ImageView
            android:id="@+id/imageView_card2"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_2_of_diamonds"/>

        <ImageView
            android:id="@+id/imageView_card3"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_3_of_diamonds"/>

        <ImageView
            android:id="@+id/imageView_card4"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_4_of_diamonds"/>

        <ImageView
            android:id="@+id/imageView_card5"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_5_of_diamonds"/>

        <ImageView
            android:id="@+id/imageView_card6"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_6_of_diamonds"/>




    </LinearLayout>








